@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Navigation -->
<nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-page="Index">
            <img src="~/images/pokeball_logo.png" alt="" width="30" height="30" class="d-inline-block align-text-top">
            PRO-PKMN
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <!--ml-auto will push elements to the right-->
            <div class="navbar-nav ms-auto">
                <a class="nav-link active" asp-area="" asp-page="/Index">Home</a>
                <a class="nav-link" asp-area="" asp-page="/Pokedex">Pokedex</a>
                <a class="nav-link" asp-area="" asp-page="/About">About</a>
            </div>
        </div>
    </div>
</nav>

<!--- Image Slider -->
<div id="slides" class="carousel slide" data-bs-ride="carousel">
    <ul class="carousel-indicators">
        <li data-bs-target="#slides" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#slides" data-bs-slide-to="1"></li>
        <li data-bs-target="#slides" data-bs-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/background.png" />
            <div class="carousel-caption">
                <h1 class="display-2">Project Pokemon</h1>
                <h3>A competitive Pokemon aid</h3>
                <button type="button" class="btn btn-outline-light btn-lg">Random</button>
                <button type="button" class="btn btn-primary btn-lg">PokeDex</button>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/background2.png" />
        </div>
        <div class="carousel-item">
            <img src="~/images/background3.png" />
        </div>
    </div>
</div>

<!--- Jumbotron -->
<div class="container-fluid bg-light py-5">
    <div class="row px-5">
        <!--How much space does it take up at the different screen sizes-->
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-10">
            <p class="lead">The purpose of this project is really to learn stuff. It is unlikely to 
                grow beyond an MVP, but if you like it and want to build it up you can
                check out the full source code on GitHub.
            </p>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xl-2">
            <button type="button" class="btn btn-outline-secondary btn-lg">Source Code</button>
        </div>
    </div>
</div>

<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class="display-4">Built with ease</h1>
        </div>
        <hr />
        <div class="col-12">
            <p class="lead">The tech stack for this project is: ASP.NET for server side rendering & data access, 
                Bootstrap & CSS for style, PokeAPI for data, and of course HTML and JS to make the horse go.
            </p>
        </div>
    </div>
</div> 

<!--- Three Column Section -->
<div class="container-fluid padding">
    <div class="row text-center padding">
        <div class="col-xs-12 col-sm-6 col-md-4">
            <i class="fas fa-code"></i>
            <h3>ASP.NET</h3>
            <p>Server side rendered using Razor pages and the latest version of .NET Core</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <i class="fas fa-bold"></i>
            <h3>BOOTSTRAP</h3>
            <p>Built with the latest version of Boostrap</p>
        </div>
        <div class="col-sm-12 col-md-4">
            <i class="fab fa-css3"></i>
            <h3>CSS3</h3>
            <p>Built with the latest version of CSS</p>
        </div>
    </div>
</div>
<hr class="my-4" />
